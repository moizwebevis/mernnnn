{
  "version": 2,
  "builds": [
    {
      "src": "/client/build/**",
      "use": "@vercel/static"
    },
    {
      "src": "/api/**",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ],
  "outputDirectory": "client/build"
}
